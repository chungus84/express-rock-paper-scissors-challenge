                    <label class="btn btn-outline-primary" for="btnrock2">Rock</label>

                    <input type="radio" class="btn-check" name="radiobtn2" value="paper" id="btnpaper2"
                        autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnpaper2">Paper</label>

                    <input type="radio" class="btn-check" name="radiobtn2" value="scissors" id="btnscissors2"
                        autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnscissors2">Scissors</label>
                </div>
                </div>

                <input type="submit" value="Submit" id="move-submit">

            </form>

