<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>
            <div class="container-fluid text-center align-middle center">
                <h1>Hi, <%= game.player2.name %>
                </h1>
                <h1>Select Rock Paper or Scissors</h1>
                <form action="/results" method="post">
                    <div class="row">
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group"></div>
                        <% moves.forEach(move=> {%>

                            <input type="radio" class="btn-check" value="<%=move%>" name="radiobtn" id="btn<%=move%>"
                                autocomplete="off" required>
                            <label class="btn btn-outline-secondary" for="btn<%=move%>">
                                <%=move%>
                            </label>
                            <% }) %>
                    </div>

                    <div class="row">
                        <input type="submit" class="btn btn-outline-success form-control mt-3" value="Submit"
                            id="move-submit">
                    </div>
            </div>
            </form>

            <%- include('partials/footer.ejs') %>
                <%- include('partials/end.ejs') %>
