<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>

            <h1>Hi, <%= game.player2.name %>
            </h1>
            <h1>Select Rock Paper or Scissors</h1>
            <form action="/results" method="post">
                <% moves.forEach(move=> {%>
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" value="<%=move%>" name="radiobtn" id="btn<%=move%>"
                            autocomplete="off">
                        <label class="btn btn-outline-primary" for="btn<%=move%>">
                            <%=move%>
                        </label>
                        <% }) %>
                    </div>
                    </div>

                    <input type="submit" value="Submit" id="move-submit">

            </form>

            <%- include('partials/footer.ejs') %>
                <%- include('partials/end.ejs') %>
